<% @patrols.each do |patrol| %>
	<% status = @shifts.where(:patrol_id => patrol.id).exists? ? @shifts.where(:patrol_id => patrol.id).first.status : nil %>
	
	<% @shift = Shift.where(:pastor_id == current_pastor.id).find_or_create_by_patrol_id(patrol.id) %>
	<%= form_for(@shift) do |f| %>
		<div class="row">
			<div class="span4"><%= patrol.patrol.strftime("%A %d %B %Y") %></div>
			<div class="span3">
				<label class="radio">
				  <%= f.radio_button "status","available" %>
					Available
				</label>
			</div>
			<div class="span3">
				<label class="radio">
				  <%= f.radio_button "status","unavailable" %>
					Unavailable
				</label>
			</div>
			<div class="span2"><%= f.submit "Update", :class => "btn" %></div>
			<%= f.hidden_field :patrol_id, :value => patrol.id %>
		</div>
	<% end %>
<% end %>