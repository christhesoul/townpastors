<!DOCTYPE html>
<html>
<head>
  <title>TownPastors</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
		
		<div class="navbar">
		  <div class="navbar-inner">
		    <a class="brand" href="#">Town Pastors</a>
		    <ul class="nav">
		      <li><%= link_to 'Pastors',pastors_path %></li>
		      <li><%= link_to 'Patrols',patrols_path %></li>
		    </ul>
		  </div>
		</div>

	<div class="well">
		<% if current_pastor %>
			Logged in as <%= current_pastor.email %> 
			<%= link_to "Log Out", logout_path %>
		<% else %>
			<%= link_to "Sign Up", signup_path %> or 
			<%= link_to "Log In", login_path %>
		<% end %>
	</div>

	<%= yield %>
	</div>
</body>
</html>
